<div class="contact" id="<%= contact.id %>">
  <div class="front">
    <%= link_to contact, class: 'pic-link' do %>
      <%= image_tag contact.avatar.url(:square) %>
    <% end %>
  </div>

  <div class="back">
    <span class="contact-name"><%= contact.name %></span>
    <div class="actions">
      <%= link_to 'Show', contact %>
      <%= link_to 'Edit', edit_contact_path(contact) %>
      <%= link_to 'Delete', contact, confirm: 'Are you sure you want to lose a contact?', method: :delete, class: 'destroy' %>
    </div>
  </div>
</div>