<p id="notice"><%= notice %></p>

<h2><%= @contact.name %></h2>
  <%= image_tag @contact.avatar.url(:medium) %>
  <%= @contact.name %>
  <%= @contact.phone%>
  <%= @contact.email %>

<div class="show actions">
  <%= link_to 'Edit', edit_contact_path(@contact) %>
  <%= link_to 'Download as pdf', contact_path(@contact, format: "pdf") %>
  <%= link_to 'Remove', @contact, data: { confirm: 'Are you sure you want to lose a contact?' }, method: :delete, class: 'destroy' %>
  <%= link_to 'Back to all my contacts', contacts_path %>
</div>